<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageEvent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_event" />

        <TextView
            android:id="@+id/textJudulEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:padding="8dp"
            android:text="Judul Event"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDeskripsiEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Deskripsi Event"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTanggalMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Tanggal Mulai: 01 Jan 2025"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textTanggalSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Tanggal Selesai: 05 Jan 2025"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iconMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/baseline_location_on_24"
            android:contentDescription="Map Icon" />

    </LinearLayout>
</androidx.cardview.widget.CardView>