<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gambar_event"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bali" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/judul_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Event"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deskripsi_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Event"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tanggal_mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Mulai: 2024-07-01"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tanggal_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Selesai: 2024-07-05"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="8dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Edit Event"
                android:src="@drawable/baseline_edit_24" />

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Delete Event"
                android:src="@drawable/baseline_delete_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>