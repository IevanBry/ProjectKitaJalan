<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!-- Gambar Destinasi -->
        <ImageView
            android:id="@+id/favImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bali"
            android:layout_alignParentStart="true" />

        <!-- Nama Destinasi -->
        <TextView
            android:id="@+id/favTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/favImageView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Bali"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15sp" />

        <!-- Tombol Favorit -->
        <Button
            android:id="@+id/favBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/baseline_favorite_24" />

        <!-- Lokasi Destinasi -->
        <TextView
            android:id="@+id/favDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/favImageView"
            android:layout_marginStart="16dp"
            android:layout_below="@id/favTextView"
            android:layout_marginTop="4dp"
            android:text="Jakarta, Indonesia"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/poppins"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
